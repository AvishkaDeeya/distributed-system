<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>UserLoginService</servlet-name>
        <servlet-class>com.controller.servlet.UserLoginService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadAllProductListService</servlet-name>
        <servlet-class>com.controller.servlet.LoadAllProductListService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadCategoryService</servlet-name>
        <servlet-class>com.controller.servlet.LoadCategoryService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadSingleProductService</servlet-name>
        <servlet-class>com.controller.servlet.LoadSingleProductService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartService</servlet-name>
        <servlet-class>com.controller.servlet.AddToCartService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginService</servlet-name>
        <url-pattern>/UserLoginService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoadProductService</servlet-name>
        <servlet-class>com.controller.servlet.LoadProductService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadProductService</servlet-name>
        <url-pattern>/LoadProductService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadAllProductListService</servlet-name>
        <url-pattern>/LoadAllProductListService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadCategoryService</servlet-name>
        <url-pattern>/LoadCategoryService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadSingleProductService</servlet-name>
        <url-pattern>/LoadSingleProductService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCartService</servlet-name>
        <url-pattern>/AddToCartService</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
